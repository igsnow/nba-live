{
    "name": "NBAlive",
    "displayName": "NBA live",
    "description": "看NBA比赛啦！",
    "publisher": "igsnow",
    "icon": "images/icon.png",
    "version": "1.0.0",
    "categories": [
        "Other"
    ],
    "keywords": [
        "NBA",
        "nba",
        "sport",
        "score",
        "live",
        "real time"
    ],
    "engines": {
        "vscode": "^1.33.0"
    },
    "activationEvents": [
        "onCommand:extension.NBARealTimeScore"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.NBARealTimeScore",
                "title": "get NBA real-time score"
            },
            {
                "command": "extension.NBARealTimeScore.off",
                "title": "exit NBA real-time score"
            },
            {
                "command": "extension.NBARealTimeScore.showMenu",
                "title": "Get a live text list"
            }
        ],
        "keybindings": [
            {
                "command": "extension.NBARealTimeScore",
                "key": "ctrl+shift+l"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.NBARealTimeScore"
                }
            ]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test",
        "build": "vsce package"
    },
    "devDependencies": {
        "typescript": "^3.3.1",
        "vscode": "^1.1.28",
        "eslint": "^5.13.0",
        "@types/node": "^10.12.21",
        "@types/mocha": "^2.2.42"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/igsnow/NBAlive.git"
    },
    "dependencies": {
        "crawler": "^1.2.1"
    }
}
